<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.blog.domain.Article" table="article">
		<id name="id" column="id">
			<generator class="increment"></generator>
		</id>
		<property name="title" length="50"></property>
		<property name="username"></property>
		<property name="content" type="text"></property>
		<property name="hasread" not-null="true"></property>
		<property name="date" ></property>
		<property name="comment" not-null="true"></property>
	</class>
</hibernate-mapping>